<% provide(:title, 'Url Shortener') %>
<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<h1>Get a shorter URL</h3>
		<%= form_for @url do |f| %>
 			<%= f.label :url, "URL" %>
  		<%= f.text_field :original, :value => "http://", class: "form-control" %><br>
  		
  		<%= f.submit "Submit", class: "btn btn-primary" %>
		<% end %>
	</div>
</div>